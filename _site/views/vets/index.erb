<h2 class="section-header">Vets</h2>

<div class="actions">
    <li><a class="a" href="/vets/new">Add new</a></li>
</div>

<div class="table-wrapper">
    <table id"vet-table">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Pets assigned</th>
            
        </tr>
            <% @vets.each do |vet| %>
            <tr> 
                <td>
                    <%= vet.first_name %>
                </td>
                <td>
                    <%=vet.last_name %>
                </td>
                <td>
                    <%= vet.pet_count %>
                </td>
                
                <td class="details-anchor-left-border">
                    <a class="a" href="/vets/<%= vet.id %>">Details</a>
                </td>
            </tr>
            <% end %>
    </table>
</div>
